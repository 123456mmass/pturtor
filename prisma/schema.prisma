generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== USER & AUTH ====================

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id                 String    @id @default(cuid())
  name               String?
  email              String    @unique
  emailVerified      DateTime? @map("email_verified")
  image              String?
  role               UserRole  @default(STUDENT)
  stripeCustomerId   String?   @map("stripe_customer_id")
  omiseCustomerId    String?   @map("omise_customer_id")
  password           String?
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")

  // Auth
  accounts      Account[]
  sessions      Session[]

  // Enrollments & Progress
  enrollments   Enrollment[]
  progress      Progress[]
  quizAttempts  QuizAttempt[]

  // Purchases
  purchases     Purchase[]
  subscriptions Subscription[]

  // Certificates
  certificates  Certificate[]

  // Chat
  chatMessages  ChatMessage[]

  // Instructor
  coursesTaught Course[] @relation("CourseInstructor")

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

enum UserRole {
  STUDENT
  INSTRUCTOR
  ADMIN
}

// ==================== COURSES ====================

model Course {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String   @db.Text
  thumbnail   String?
  price       Decimal  @db.Decimal(10, 2)
  
  // Pricing Type
  pricingType PricingType @default(ONETIME)
  
  // Subscription pricing (if applicable)
  subscriptionPrice Decimal? @db.Decimal(10, 2)
  
  // Course type
  courseType  CourseType @default(VIDEO)
  
  // Status
  published   Boolean  @default(false)
  featured    Boolean  @default(false)
  
  // Metadata
  level       CourseLevel @default(BEGINNER)
  category    String?
  tags        String[]
  
  // Instructor
  instructorId String
  instructor   User     @relation("CourseInstructor", fields: [instructorId], references: [id])
  
  // Relations
  chapters    Chapter[]
  enrollments Enrollment[]
  purchases   Purchase[]
  certificates Certificate[]
  
  // Quiz
  quizzes     Quiz[]
  
  // Chat room
  chatRoom    ChatRoom?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("courses")
}

enum PricingType {
  ONETIME      // ซื้อครั้งเดียว
  SUBSCRIPTION // สมัครสมาชิก
  FREEMIUM     // ฟรี + Premium
}

enum CourseType {
  VIDEO   // Pre-recorded
  LIVE    // Live streaming
  HYBRID  // Both
}

enum CourseLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

model Chapter {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  position    Int      // Order in course
  
  // Video content
  videoUrl    String?  // Mux playback ID
  videoAssetId String? // Mux asset ID
  duration    Int      // Duration in seconds
  
  // PDF/Document
  pdfUrl      String?
  
  // Free preview
  isFree      Boolean  @default(false)
  
  // Relations
  courseId    String
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  // Progress tracking
  progress    Progress[]
  
  // Quiz (optional per chapter)
  quiz        Quiz?
  
  // Discussion
  discussions Discussion[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([courseId, position])
  @@map("chapters")
}

// ==================== ENROLLMENT & PROGRESS ====================

model Enrollment {
  id        String   @id @default(cuid())
  userId    String
  courseId  String
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  // Progress
  progress  Float    @default(0) // 0-100
  
  // Status
  status    EnrollmentStatus @default(ACTIVE)
  
  // Completion
  completedAt DateTime?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, courseId])
  @@map("enrollments")
}

enum EnrollmentStatus {
  ACTIVE
  COMPLETED
  SUSPENDED
  CANCELLED
}

model Progress {
  id          String   @id @default(cuid())
  userId      String
  chapterId   String
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  chapter     Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  
  // Video progress
  watchTime   Int      @default(0) // Seconds watched
  completed   Boolean  @default(false)
  lastPosition Int     @default(0) // Last video position
  
  updatedAt   DateTime @updatedAt

  @@unique([userId, chapterId])
  @@map("progress")
}

// ==================== PAYMENT ====================

model Purchase {
  id          String   @id @default(cuid())
  userId      String
  courseId    String
  
  user        User     @relation(fields: [userId], references: [id])
  course      Course   @relation(fields: [courseId], references: [id])
  
  // Amount
  amount      Decimal  @db.Decimal(10, 2)
  currency    String   @default("THB")
  
  // Payment method
  provider    PaymentProvider
  providerPaymentId String?
  
  // Status
  status      PaymentStatus @default(PENDING)
  
  // Timestamps
  paidAt      DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("purchases")
}

model Subscription {
  id          String   @id @default(cuid())
  userId      String
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Plan
  plan        SubscriptionPlan
  price       Decimal  @db.Decimal(10, 2)
  
  // Provider
  provider    PaymentProvider
  providerSubscriptionId String?
  
  // Period
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  
  // Status
  status      SubscriptionStatus @default(ACTIVE)
  
  // Cancel
  cancelAtPeriodEnd Boolean @default(false)
  cancelledAt DateTime?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("subscriptions")
}

enum SubscriptionPlan {
  MONTHLY
  YEARLY
}

enum PaymentProvider {
  STRIPE
  OMISE
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
  CANCELLED
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
  PAST_DUE
}

// ==================== QUIZ ====================

model Quiz {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  
  // Relations
  courseId    String?  // Course-level quiz
  course      Course?  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  chapterId   String?  @unique // Chapter-level quiz
  chapter     Chapter? @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  
  // Settings
  timeLimit   Int?     // Minutes
  passingScore Int     @default(70) // Percentage
  maxAttempts Int      @default(3)
  
  // Questions
  questions   Question[]
  
  // Attempts
  attempts    QuizAttempt[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("quizzes")
}

model Question {
  id          String   @id @default(cuid())
  quizId      String
  quiz        Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  
  // Content
  content     String   @db.Text
  type        QuestionType
  
  // Options (for multiple choice)
  options     Json?    // [{text: "A", isCorrect: true}, ...]
  
  // Correct answer
  correctAnswer String // "A", "B", "C", "D" or text
  
  // Points
  points      Int      @default(1)
  position    Int      // Question order

  @@map("questions")
}

enum QuestionType {
  MULTIPLE_CHOICE
  TRUE_FALSE
  SHORT_ANSWER
}

model QuizAttempt {
  id          String   @id @default(cuid())
  userId      String
  quizId      String
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  quiz        Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  
  // Answers
  answers     Json     // [{questionId: "", answer: ""}, ...]
  
  // Score
  score       Int      @default(0)
  maxScore    Int      @default(0)
  percentage  Float    @default(0)
  passed      Boolean  @default(false)
  
  // Time
  startedAt   DateTime @default(now())
  submittedAt DateTime?
  
  @@map("quiz_attempts")
}

// ==================== CERTIFICATE ====================

model Certificate {
  id          String   @id @default(cuid())
  userId      String
  courseId    String
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  // Certificate data
  certificateNumber String @unique
  pdfUrl      String
  
  // Completion date
  issuedAt    DateTime @default(now())
  
  @@unique([userId, courseId])
  @@map("certificates")
}

// ==================== CHAT & DISCUSSION ====================

model ChatRoom {
  id          String   @id @default(cuid())
  courseId    String   @unique
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  name        String
  
  messages    ChatMessage[]
  
  createdAt   DateTime @default(now())
  
  @@map("chat_rooms")
}

model ChatMessage {
  id          String   @id @default(cuid())
  roomId      String
  room        ChatRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  content     String   @db.Text
  
  createdAt   DateTime @default(now())
  
  @@map("chat_messages")
}

model Discussion {
  id          String   @id @default(cuid())
  chapterId   String
  chapter     Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  
  userId      String
  
  title       String
  content     String   @db.Text
  
  replies     DiscussionReply[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("discussions")
}

model DiscussionReply {
  id          String   @id @default(cuid())
  discussionId String
  discussion  Discussion @relation(fields: [discussionId], references: [id], onDelete: Cascade)
  
  userId      String
  
  content     String   @db.Text
  
  createdAt   DateTime @default(now())
  
  @@map("discussion_replies")
}
